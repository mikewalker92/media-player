<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="TitleTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Text" Value="Media Player"/>
        <Setter Property="Foreground" Value="{StaticResource TitleTextBlockTextBrush}"/>
        <Setter Property="Margin" Value="10,5,10,5"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="FontStretch" Value="UltraExpanded"/>
    </Style>
    
    <Style x:Key="TitleGridStyle" TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource TitleBackgroundBrush}"/>
    </Style>

</ResourceDictionary>
